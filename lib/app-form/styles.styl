body.app-form
  background-color #e76056
  color #fff
  transition all ease .3s

  .left-container
    padding-top 10px

  .disabled
    color #f08d85

  .color-picker
    text-align center

  input
    color #6d6d6d
    padding 12px
    text-align center
    text-transform uppercase
    margin-bottom 10px
    width 100%

  .background-color
    background-color #262626
    max-width 275px
    height 200px
    margin 0 auto
    
    h1
      height 200px
      line-height 200px
      margin 0
      text-align center
      width 100%

  .title-container
    background-color #d7d7d7
    height 200px
    margin 0 auto
    max-width 275px
    padding 22px 0
    text-align center

    textarea
      color #6d6d6d
      height 100px
      margin 0 auto
      padding 6px 12px
      resize none
      width 80%

  .continue
    margin-top 10px