#apps-wrapper
  .apps-admin
    .row.well.well-lg
      .col-xs-12.col-md-2
        .btn.btn-success.btn-block.new
          span.glyphicon.glyphicon-plus
          = ' ' + t('admin.list.new')
      .col-xs-12.col-md-7.col-md-offset-3
        .input-group.input-group-md
          span.input-group-addon
            i.glyphicon.glyphicon-search
          input.form-control.search(type='text', placeholder=t("admin.list.search.placeholder"), value='{{search}}')
    .row
      .list.list-group
        | {{#each apps }}
        a.list-group-item(href="/admin/apps/{{id}}")
          span.app-title='{{title}}'
        | {{/each}}
