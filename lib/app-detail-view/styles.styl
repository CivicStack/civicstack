.app-detail
  .link
    color #0071bb

  .app-info
    display: flex
    flex-direction: row
    flex-wrap: wrap

  .app-data-text
    padding 25px 40px
    background-color #efefef

    h1,
    h2,
    h3
      margin 0
      margin-bottom 22px
      font-size 22px

      small
        display block
        font-size 16px

  .more-info
    flex-grow: 2
    padding 45px 30px
    background-color white

    .cover-video
      padding 45px 0

      .embed-container
        position relative
        padding-bottom 56.25%
        height 0
        overflow hidden
        max-width: 100%

        iframe
        object
        embed
          position absolute
          top 0
          left 0
          width 100%
          height 100%

    .social-badges
      padding-left 15px
      margin-bottom 15px

      .fb_iframe_widget
        top -5px

    .list-group
      .list-group-item
        a
          &:hover
            text-decoration none
          .no-og
            h4
              margin-bottom 0

    h4
      font-size 20px
      font-weight bold
      margin-bottom 22px

      small
        font-size 14px
        margin-left 6px
