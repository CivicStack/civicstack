html,
body
  height 100%
  margin 0
  padding 0

body
  background-color #dfdfdf
  font-family "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif
  padding-top 112px
  transition all ease .3s
  -webkit-font-smoothing antialiased

  .no-gutter [class*="col-"]
    padding 0 !important

h1,
h2,
h3
  font-weight 100

a
  color #333

  &:focus
    outline none

  &:hover
    color #333

.btn
  &.btn-default
    background-color #e76056
    border-color #cb694b
    color #fafafa

.app-logo
  background-repeat no-repeat
  background-size 70%
  background-position center center
  display block
  height 175px
  width 100%

textarea
  resize none

.modal
  .modal-header,
  .modal-footer
    background-color #f4f4f4

  .modal-header
    font-weight bold
