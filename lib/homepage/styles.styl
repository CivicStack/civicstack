.homepage
  .homepage-navigation
    margin-bottom 30px

  .filters
    text-align center

    .badge
      margin 0 5px

    .filter-remove
      margin-left 10px

      a
        color white

        &:hover
          text-decoration none
          cursor pointer

  .filters
    input.search
      outline 0
      padding 20px 20px 20px 30px
      border 0
      border-radius 1px
      box-shadow none
      background-color rgba(#fff, .4)
      transition all .2s

      &:active,
      &:focus
        box-shadow 0px 1px 1px rgba(0,0,0, .1)
        background-color #fff

    .search-icon
      color #b3b3b3
      position absolute
      left 25px
      top 13px

  a.btn-filter
    color #4d4d4d
    font-weight bold
    text-transform capitalize

  .loading-overlay
    position fixed
    height 100%
    width 100%
    opacity 0.8
    background-color #dfdfdf
    z-index 10

  .applications-container
    display flex
    flex-wrap wrap
    justify-content center
