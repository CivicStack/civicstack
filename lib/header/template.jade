.container
  .navbar-header
    a(href='/').navbar-brand
      img(src='/lib/header/images/logo.svg' title='Civic Stack')
      | Civic Stack
    button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='.ul-navbar-collapse')
      span.icon-bar
      span.icon-bar
      span.icon-bar
  .collapse.navbar-collapse.ul-navbar-collapse.text-center#header-collapse
    ul.nav.navbar-nav.navbar-right
      li: a(href='/about')=t('header.about')
      | {{#if !user.logged() }}
      li
        a.navbar-text
          strong=t('header.login-with')
          a.login.twitter(href='/auth/twitter'): i.fa.fa-twitter
          strong=t('header.or')
          a.login.github(href='/auth/github'): i.fa.fa-github
      | {{ else }}
      | {{#if (user.admin) }}
      li
        a(href='/admin')=t('header.admin')
      | {{/if}}
      li
        a(href='/logout')
          img.avatar(src='{{ user.avatar }}' title='{{ user.fullName }}')
          =t('header.logout')
      | {{ /if }}
      li
        | {{#if lang == 'en' }}
        a.lang(href='#' title=t('english') on-click='lang:en') EN
        a.lang.text-mute(href='#' title=t('spanish') on-click='lang:es') ES
        | {{/if}}
        | {{#if lang == 'es' }}
        a.lang.text-mute(href='#' title=t('english') on-click='lang:en') EN
        a.lang(href='#' title=t('spanish') on-click='lang:es') ES
        | {{/if}}
