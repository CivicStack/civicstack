#site-header
  height 80px
  border-bottom 2px
  background-color #fafafa

  &:after
    content ''
    display block
    position absolute
    bottom 0
    left 0
    width 100%
    height 1px
    background-position center center
    background-image repeating-linear-gradient(
      to right,
      #F7C64D (120px * 0),
      #F7C64D (120px * 1),
      #61BAA8 (120px * 1),
      #61BAA8 (120px * 2),
      #1394AF (120px * 2),
      #1394AF (120px * 3),
      #D93F5D (120px * 3),
      #D93F5D (120px * 4),
      #714C80 (120px * 4),
      #714C80 (120px * 5),
      #E16B55 (120px * 5),
      #E16B55 (120px * 6)
    )

  .navbar-brand
    font-size 20px
    color #333
    height 80px
    line-height 51px

    img
      position relative
      top -2px
      display inline-block
      margin-right 12px
      width 30px

    @media (max-width: 480px)
      span
        display none

  .menu
    text-align right
    display flex
    justify-content flex-end
    flex-wrap wrap
    align-items center

  .add-app
    display inline-block
    margin-right 15px

    .fa
      margin-right: 0.3em

  .toggle-sidebar
    position relative
    display inline-block
    margin 0
    border 0
    padding 26px
    border-radius 0
    transition all .3s
    background-color transparent

    &:hover
      background-color: #f5f5f5

    .icon-bar
      display block
      width 6px
      height 6px
      border-radius 100%
      background-color #333

      & + .icon-bar
        margin-top 4px
