header#site-header
  border-bottom 2px
  background-color #fff

  &:after
    content ''
    display block
    position absolute
    bottom 0
    left 0
    width 100%
    height 2px
    background-position center center
    background-image repeating-linear-gradient(
      to right,
      #F7C64D (120px * 0),
      #F7C64D (120px * 1),
      #61BAA8 (120px * 1),
      #61BAA8 (120px * 2),
      #1394AF (120px * 2),
      #1394AF (120px * 3),
      #D93F5D (120px * 3),
      #D93F5D (120px * 4),
      #714C80 (120px * 4),
      #714C80 (120px * 5),
      #E16B55 (120px * 5),
      #E16B55 (120px * 6)
    )

  .navbar-brand
    font-size 26px

    img
      display inline-block
      margin-right 12px
      width 40px

  .navbar-toggle
    margin-top 29px
    
    .icon-bar
      background-color #e76059

  .navbar-nav
    margin-bottom 0

    a.lang
      display inline-block
      &.text-mute
        color #c7c7c7

  .navbar-brand,
  .navbar-nav li a,
  .navbar-nav li .navbar-text
    color #000
    height 90px
    line-height 90px
    padding-top 0

    img.avatar
      border-radius 100px
      margin-right 12px
      max-width 48px

  .navbar-nav li .navbar-text
    margin-top 0
    margin-bottom 0

  .navbar-collapse
    max-height inherit
