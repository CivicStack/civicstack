article.application-card
  box-shadow 0px 5px 5px #a4a4a4
  margin-bottom 22px

  .app-logo
    height 175px
    width 100%
    background-size 80%

  .app-detail
    background white
    font-size 12px
    padding 12px
    min-height 190px

    header
      margin-bottom 12px

      h1, h2
        margin 0

      h1
        font-size 16px
        font-weight bold
      h2
        font-size 14px

    .description
      height 100px

  footer
    background-color #efefef
    font-size 12px
    height 50px
    line-height 50px
    padding 0 12px
